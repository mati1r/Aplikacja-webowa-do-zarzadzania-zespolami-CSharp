@model Models.Group

<div class="p-4">
    <h1 class="text-center display-6 fw-bold">Zarzadzaj grupą @Model.name</h1>
</div>

<div class="p-3">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card bg-table">
                    <div class="card-body">
                        <div class="container">
                            <h3>Dane grupy</h3>
                            <hr/>
                            <form method="post" id="editForm" asp-page-handler="Edit">
                                <div class="mb-4 col-md-6">
                                    <label class="form-label" for="name">Nazwa</label><br />
                                    <input type="text" id="name" class="form-control form-control-lg text-light input-background" asp-for="name" />
                                    <span asp-validation-for="name" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label" for="description">Opis</label><br />
                                    <textarea type="text" id="description" class="form-control form-control-lg text-light input-background wrap-text" asp-for="description" rows="6"></textarea>
                                    <span asp-validation-for="description" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-end mb-3">
                                    <button class="btn btn-primary">Zatwierdź zmiany</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>