@model PartialModels.UserAccountDataPartial
<div class="mb-md-5 mt-md-4 pb-5">

    <form method="post" id="accountForm" asp-page-handler="AccountDataEdit">
        <div class="contain">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-7 form-outline form-white mb-4">
                    <div class="mb-4">
                        <label class="form-label" for="oldPassword">Stare hasło</label><br />
                        <input type="text" id="oldPassword" class="form-control form-control-lg text-light input-background" asp-for="oldPassword" />
                        <span asp-validation-for="oldPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="newPassword">Nowe hasło</label><br />
                        <input type="text" id="newPassword" class="form-control form-control-lg text-light input-background" asp-for="newPassword" />
                        <span asp-validation-for="newPassword" class="text-danger"></span>
                        </div>
                    <div class="mb-4">
                        <label class="form-label" for="newPasswordRepeat">Powtórz hasło</label><br />
                        <input type="text" id="newPasswordRepeat" class="form-control form-control-lg text-light input-background" asp-for="newPasswordRepeat" />
                        <span asp-validation-for="newPasswordRepeat" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <button class="btn btn-primary">Zatwierdź zmiany</button>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </form>
</div>
