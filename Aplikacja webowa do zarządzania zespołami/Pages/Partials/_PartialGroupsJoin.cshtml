@model List<PartialModels.GroupJoinPartial>

@if (!Model.Any())
{
    <div class="no-data">
        <p>Brak wyników</p>
    </div>
}
else
{
    <table id="DataTable" class="dataTable table table-borderless">
        <thead>
            <tr>
                <th scope="col" class="col-md-3">Nazwa grupy</th>
                <th scope="col" class="col-md-2">Właściciel</th>
                <th scope="col" class="col-md-7">Opis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@item.group_id" data-bs-toggle="modal" data-bs-target="#join-modal">
                    <td>@item.name</td>
                    <td>@item.owner_name</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
}