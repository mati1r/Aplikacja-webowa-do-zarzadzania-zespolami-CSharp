@model PartialModels.UserPersonalDataPartial
<div class="mb-md-5 mt-md-4 pb-5">

    <form method="post" id="personalForm" asp-page-handler="PersonalDataEdit">
        <div class="contain">
            <div class="row">
                <div class="col-md-6 form-outline form-white mb-4">
                    <label class="form-label" for="name">Imie*</label><br />
                    <input type="text" id="name" class="form-control form-control-lg text-light input-background" asp-for="name" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-outline form-white mb-4">
                    <label class="form-label" for="surname">Nazwisko*</label><br />
                    <input type="text" id="surname" class="form-control form-control-lg text-light input-background" asp-for="surname" />
                    <span asp-validation-for="surname" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-outline form-white mb-4">
            <label class="form-label" for="username">Nazwa użytkownika</label><br />
            <input type="text" id="username" class="form-control form-control-lg text-light input-background" asp-for="username" />
            <span asp-validation-for="username" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-primary">Zatwierdź zmiany</button>
        </div>
    </form>

    <hr/>
    <p class="text-white-50">* - opcjonalne</p>
</div>